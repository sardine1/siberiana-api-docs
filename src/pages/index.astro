---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";


const docsGeneral = await Astro.glob("../content/general/*.md");
const docsResources = await Astro.glob("../content/resources/*.md");
---

<Layout title="Public API">
	<Header />
	<main class="flex flex-col gap-4 max-w-2xl mx-auto">
		<div class="flex flex-col gap-2">
			<h2 class="font-semibold text-3xl">Общие</h2>
			<div class="flex flex-col">
				{docsGeneral.map((doc) =>
				<Link doc={doc} />)}
			</div>
		</div>
		<div class="flex flex-col gap-2">
			<h2 class="font-semibold text-3xl">Ресурсы</h2>
			<div class="flex flex-col">
				{docsResources.map((doc) =>
				<Link doc={doc} />)}
			</div>
		</div>
	</main>
</Layout>