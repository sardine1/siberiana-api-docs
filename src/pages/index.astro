---
import Header from "../components/Header.astro";
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";


const docsGeneral = await Astro.glob("../content/general/*.md");
const docsResources = await Astro.glob("../content/resources/*.md");
---

<Layout title="Public API">
	<Header />
	<main class="max-w-2xl mx-auto">
		<div class="flex flex-col">
			<h1 class="text-lg">Общие</h1>
			{docsGeneral.map((doc) =>
			<Link doc={doc} />)}
		</div>
		<div class="flex flex-col">
			<h1>Ресурсы</h1>
			{docsResources.map((doc) =>
			<Link doc={doc} />)}
		</div>
	</main>
</Layout>