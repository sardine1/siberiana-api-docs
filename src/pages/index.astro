---
import Layout from "../layouts/Layout.astro";
import Link from "../components/Link.astro";


const docsGeneral = await Astro.glob("../content/general/*.md");
const docsResources = await Astro.glob("../content/resources/*.md");
---

<Layout title="">
	<main>
		<h1>Общие</h1>
		{docsGeneral.map((doc) => <Link doc={doc}/>)}
		<h1>Ресурсы</h1>
		{docsResources.map((doc) => <Link doc={doc}/>)}
	</main>
</Layout>
